<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EjemploFace.VerificacionPage">
    <ContentPage.Content>

        <StackLayout Margin="10">
            <Entry x:Name="entryImagen1" Placeholder="Url de la primera imagen" />
            <Entry x:Name="entryImagen2" Placeholder="Url de la segunda imagen" />

            <Button Text="Verificar" Clicked="Button_Clicked" />

            <Image x:Name="imagen1" Aspect="AspectFit" HeightRequest="100" WidthRequest="100" />
            <Image x:Name="imagen2" Aspect="AspectFit" HeightRequest="100" WidthRequest="100" />

            <Label Text="El puntaje de verificación es: "/>
            <Label Text="0.00" FontAttributes="Bold" x:Name="labelResultado" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>
